<script>
  // Pricing carousel navigation
  document.addEventListener('DOMContentLoaded', () => {
    const carousel = document.querySelector('.pricing-carousel-container');
    const prevBtn = document.querySelector('.pricing-nav-prev');
    const nextBtn = document.querySelector('.pricing-nav-next');

    if (carousel && prevBtn && nextBtn) {
      const firstItem = carousel.querySelector('.pricing-item');
      const gap = 16; // match CSS gap for mobile
      const itemWidth = firstItem ? Math.round(firstItem.getBoundingClientRect().width) : 300;
      const scrollAmount = itemWidth + gap;

      prevBtn.addEventListener('click', () => {
        carousel.scrollBy({ left: -scrollAmount, behavior: 'smooth' });
      });

      nextBtn.addEventListener('click', () => {
        carousel.scrollBy({ left: scrollAmount, behavior: 'smooth' });
      });
    }
  });
</script>
