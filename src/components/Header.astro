---
// Header component matching Boulder Box Framer design
---

<header class="sticky top-0 z-50 w-full bg-white border-b border-gray-200">
  <nav class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <!-- Logo -->
      <div class="flex-shrink-0">
        <a href="/" class="flex items-center">
          <img
            src="/assets/boulder-box-logo.avif"
            alt="Boulder Box"
            class="h-10 w-auto"
          />
        </a>
      </div>

      <!-- Navigation Links (Desktop) -->
      <div class="hidden md:flex items-center space-x-8">
        <a
          href="#"
          class="text-gray-600 hover:text-gray-900 transition-colors font-medium text-sm"
        >
          Home
        </a>
        <a
          href="#about"
          class="text-gray-600 hover:text-gray-900 transition-colors font-medium text-sm"
        >
          About
        </a>
        <a
          href="#contact"
          class="text-gray-600 hover:text-gray-900 transition-colors font-medium text-sm"
        >
          Contact
        </a>
      </div>

      <!-- CTA Button -->
      <div class="hidden md:flex">
        <a
          href="https://maps.app.goo.gl/ExoLejDiePDpqMsx6"
          target="_blank"
          rel="noopener noreferrer"
          class="bg-gray-900 text-white px-6 py-2 rounded-lg font-medium text-sm hover:bg-gray-800 transition-colors"
        >
          Visit Us
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <div class="md:hidden">
        <button
          id="mobile-menu-button"
          class="inline-flex items-center justify-center p-2 rounded-md text-gray-600 hover:text-gray-900 hover:bg-gray-100"
        >
          <svg
            class="h-6 w-6"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"
            />
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile Menu -->
    <div id="mobile-menu" class="hidden md:hidden pb-4 border-t border-gray-200">
      <a href="#" class="block px-3 py-2 text-gray-600 hover:bg-gray-50 rounded-md">
        Home
      </a>
      <a href="#about" class="block px-3 py-2 text-gray-600 hover:bg-gray-50 rounded-md">
        About
      </a>
      <a href="#contact" class="block px-3 py-2 text-gray-600 hover:bg-gray-50 rounded-md">
        Contact
      </a>
      <a
        href="https://maps.app.goo.gl/ExoLejDiePDpqMsx6"
        target="_blank"
        rel="noopener noreferrer"
        class="block w-full mt-4 bg-gray-900 text-white px-6 py-2 rounded-lg font-medium text-sm hover:bg-gray-800 text-center"
      >
        Visit Us
      </a>
    </div>
  </nav>
</header>

<script>
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  mobileMenuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });

  // Close menu when a link is clicked
  const mobileMenuLinks = mobileMenu?.querySelectorAll('a');
  mobileMenuLinks?.forEach(link => {
    link.addEventListener('click', () => {
      mobileMenu?.classList.add('hidden');
    });
  });
</script>
